@model Capa_de_Modelo.Usuario
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    <link rel="icon" type="image/png" href="images/icons/favicon.ico" />
    <link rel="stylesheet" type="text/css" href="~/Content/bootstrap.min.css">
    <link rel="stylesheet" type="text/css" href="~/fonts/fontsLogin/font-awesome-4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" type="text/css" href="~/fonts/fontsLogin/iconic/css/material-design-iconic-font.min.css">
    <link rel="stylesheet" type="text/css" href="~/Scripts/vendorLogin/animate/animate.css">
    <link rel="stylesheet" type="text/css" href="~/Scripts/vendorLogin/vendor/css-hamburgers/hamburgers.min.css">
    <link rel="stylesheet" type="text/css" href="~/Scripts/vendorLogin/vendor/animsition/css/animsition.min.css">
    <link rel="stylesheet" type="text/css" href="~/Scripts/vendorLogin/vendor/select2/select2.min.css">
    <link rel="stylesheet" type="text/css" href="~/Scripts/vendorLogin/vendor/daterangepicker/daterangepicker.css">
    <link rel="stylesheet" type="text/css" href="~/Content/cssLogin/util.css">
    <link rel="stylesheet" type="text/css" href="~/Content/cssLogin/main.css">

    <script src="~/Scripts/vendorLogin/jquery/jquery-3.2.1.min.js"></script>
    <script src="~/Scripts/vendorLogin/animsition/js/animsition.min.js"></script>
    <script src="~/Scripts/vendorLogin/bootstrap/js/popper.js"></script>
    <script src="~/Scripts/vendorLogin/bootstrap/js/bootstrap.min.js"></script>
    <script src="~/Scripts/vendorLogin/select2/select2.min.js"></script>
    <script src="~/Scripts/vendorLogin/daterangepicker/moment.min.js"></script>
    <script src="~/Scripts/vendorLogin/daterangepicker/daterangepicker.js"></script>
    <script src="~/Scripts/vendorLogin/countdowntime/countdowntime.js"></script>
    <script src="~/Scripts/jsLogin/main.js"></script>
</head>
<body>

    <div class="limiter">
        <div class="container-login100" style="background-image: url(../../Content/fondoProductos.jpg);">
            <div class="wrap-login100">

                @using (Html.BeginForm("IniciarSesion", "Login", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                    <form class="login100-form validate-form">
                        <span class="login100-form-logo">
                            <i class="zmdi zmdi-landscape"></i>
                        </span>

                        <span class="login100-form-title p-b-34 p-t-27">
                            Log in
                        </span>

                        <div class="wrap-input100 validate-input" data-validate="Enter username">
                            @Html.TextBoxFor(model => model.UserName, new { @class = "input100", @placeholder = "UserName" })
                            <span class="focus-input100" data-placeholder="&#xf207;"></span>
                        </div>

                        <div class="wrap-input100 validate-input" data-validate="Enter password">
                            @Html.TextBoxFor(model => model.Password, new { @class = "input100", @placeholder = "Password", @type="password"})
                            <span class="focus-input100" data-placeholder="&#xf191;"></span>
                        </div>
                        
                        <div class="d-flex justify-content-center" style="text-align: center;">
                            @Html.ActionLink("No tienes una cuenta? Registrate aqui", "Form", "Usuario", htmlAttributes: new { @class = "btn btn-primary", @style= "text-align:center; margin-bottom: 20px; " })
                        </div>

                        <div class="container-login100-form-btn">
                            <input type="submit" value="Login" class="login100-form-btn" />
                        </div>
                    </form>
                }
                </div>
        </div>
    </div>
</body>
</html>
