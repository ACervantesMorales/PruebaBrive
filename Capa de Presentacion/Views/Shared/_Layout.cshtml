<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="https://fonts.googleapis.com/css?family=Poppins:100,200,300,400,500,600,700,800,900&display=swap" rel="stylesheet">
    <link href="~/Scripts/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/Content/fontawesome.css">
    <link rel="stylesheet" href="~/Content/templatemo-sixteen.css">
    <link rel="stylesheet" href="~/Content/owl.css">
    <link rel="stylesheet" href="~/Content/EstiloNav.css">
    <link rel="stylesheet" href="~/Content/Site.css">
    <script src="~/Scripts/vendor/jquery/jquery.min.js"></script>
    <script src="~/Scripts/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/Scripts/NuevosScripts/custom.js"></script>
    <script src="~/Scripts/NuevosScripts/owl.js"></script>
    <script src="~/Scripts/NuevosScripts/slick.js"></script>
    <script src="~/Scripts/NuevosScripts/isotope.js"></script>
    <script src="~/Scripts/NuevosScripts/accordions.js"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.3/font/bootstrap-icons.css">

</head>

    <div class="area"></div><nav class="main-menu" style="position:fixed;">
    @{
        Capa_de_Modelo.Usuario usuario = new Capa_de_Modelo.Usuario();
        usuario = (Capa_de_Modelo.Usuario)(Session["Usuario"]);
    }
    @if (usuario.Rol.IdRol == 1)
    {
        <ul>
            <li class="has-subnav">
                <a class="nav-link" href="#">
                    <i class="fa fa-user fa-2x"></i>
                    <span class="nav-text">
                        @usuario.UserName
                    </span>
                </a>
            </li>
            <li>
                <a class="nav-link" href="@Url.Action("GetAll", "Producto")">
                    <i class="fa fa-product-hunt fa-2x"></i>
                    <span class="nav-text">
                        Producto
                    </span>
                </a>
            </li>
            <li class="has-subnav">
                <a class="nav-link" href="@Url.Action("GetAll", "Sucursal")">
                    <i class="fa fa-building fa-2x"></i>
                    <span class="nav-text">
                        Sucursal
                    </span>
                </a>

            </li>
            <li class="has-subnav">
                <a class="nav-link" href="@Url.Action("GetAll", "Venta")">
                    <i class="fa fa-shopping-cart fa-2x"></i>
                    <span class="nav-text">
                        Venta
                    </span>
                </a>
            </li>
            <li class="has-subnav">
                <a class="nav-link" href="@Url.Action("CerrarSesion", "Login")">
                    <i class="fa fa-sign-out fa-2x"></i>
                    <span class="nav-text">
                        Cerrar Sesion
                    </span>
                </a>
            </li>
        </ul>
    }
    else
    {
        <li class="has-subnav">
            <a class="nav-link" href="#">
                <i class="fa fa-user fa-2x"></i>
                <span class="nav-text">
                    @usuario.UserName
                </span>
            </a>
        </li>
        <li class="has-subnav">
            <a class="nav-link" href="@Url.Action("GetAll", "Venta")">
                <i class="fa fa-shopping-cart fa-2x"></i>
                <span class="nav-text">
                    Venta
                </span>
            </a>
        </li>
        <li class="has-subnav">
            <a class="nav-link" href="@Url.Action("CerrarSesion", "Login")">
                <i class="fa fa-sign-out fa-2x"></i>
                <span class="nav-text">
                    Cerrar Sesion
                </span>
            </a>
        </li>
    }
</nav>
<body>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
